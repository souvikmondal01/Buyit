<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".start.ui.fragments.StartFragment">

    <ImageView
        android:id="@+id/iv_shape_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_blue"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="32dp"
        android:backgroundTint="@color/orange_500"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="32dp"
        app:layout_constraintBottom_toTopOf="@id/iv_shape_blue"
        app:layout_constraintTop_toTopOf="@id/iv_shape_blue" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_register"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/register"
        android:textColor="@color/white"
        app:cornerRadius="32dp"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp" />

    <LinearLayout
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/btn_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >
<!--        app:layout_constraintVertical_bias=".3"-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ssp_bold_italic"
            android:text="Buy"
            android:textColor="@color/orange_500"
            android:textSize="56sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ssp_bold_italic"
            android:text="it"
            android:textColor="@color/blue"
            android:textSize="56sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>